{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "node npm_scripts/serve.js",
    "clean": "node npm_scripts/clean.js",
    "build:styles": "node npm_scripts/styles.js",
    "build:scripts": "node npm_scripts/scripts.js",
    "build": "run-s clean build:* --silent",
    "watch:styles": "onchange 'src/styles/*.scss' -- npm run build:styles",
    "watch:scripts": "onchange 'src/scripts/*.js' -- npm run build:scripts",
    "start": "run-p serve watch:* --silent"
  },
