  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "browser-sync": "^2.26.7",
    "chalk": "^3.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.6.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.3.2",
    "uglify-js": "^3.6.9"
  }
}
