mixin section-testimonial-head(avatar, title, subtitle)
  include ./_setup
  include ../../utils/srcset
  
  +section(class='section--testimonial-head layout-m')

    .testimonial-head

      picture.testimonial-head__avatar
        +srcset(avatar, self.imageSizes["testimonial-head-avatar"])

      .head__content
        h2.testimonial-head__content__title #{title}
        .testimonial-head__content__subtitle #{subtitle}
