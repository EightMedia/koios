mixin fixed-cta(title, button, showShare)
  include ../../icons/_icon
  include ../atoms/button
  include ../molecules/share-balloon

  nav.fixed-cta(class="js-fixed-cta")
    .fixed-cta-inner
      .fixed-cta__title #{title}
      .fixed-cta__buttons
        if showShare
          +share-balloon
        +button(button.label, button.link, button.number)