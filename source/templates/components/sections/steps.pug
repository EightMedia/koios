mixin section-steps(title, steps)
  include ./_setup
  include ../../rh-icons/_rh-icon

  +section(title)(class='section--steps layout-l')

    .steps(class="js-steps")

      each step in steps

        .steps__item(class="js-steps-item")
          .steps__item-inner
            .steps__item__icon
              +rh-icon(step.icon)
            .steps__item__body
              h3.steps__item__body__title #{step.title}
              .steps__item__body__text !{step.text}
              